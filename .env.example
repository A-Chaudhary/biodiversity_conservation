# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# LLM Parameters
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=4000

# API Keys and Endpoints
IUCN_API_TOKEN=your_iucn_token_here  # Get your token at: https://api.iucnredlist.org/users/sign_up
GBIF_API_URL=https://api.gbif.org/v1
IUCN_API_URL=https://api.iucnredlist.org/api/v4

# Cache Configuration
ENABLE_CACHE=true
CACHE_TYPE=redis  # Options: redis, memory, file
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL=86400  # 24 hours in seconds

# Database Configuration
DATABASE_TYPE=sqlite  # Options: sqlite, json
SQLITE_DB_PATH=data/biodiversity.db

# Application Settings
LOG_LEVEL=INFO
MAX_RETRIES=3
REQUEST_TIMEOUT=30

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Evaluation Settings
TEST_SPECIES_COUNT=10
ENABLE_EARLY_WARNING=true

# News Scraping
NEWS_SOURCE_URL=https://news.mongabay.com
SCRAPING_ENABLED=true
